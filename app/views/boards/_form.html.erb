<%= form_with(model: board, local: true, class: "mb-7") do |form| %>
    <%# data: { turbo: false } %>
    <strong>
    <%= form.label :name, "Name it" %>
    </strong>
    <%= form.text_field :name, placeholder: p_please_bob, class: "w-96 form-text-field" %>

    <br>
    <strong>
    <%= form.label :email, "Your email" %>
    </strong>
    <%= form.text_field :email, placeholder: "your@email.address", class: "w-96 form-text-field" %>

    <br>

    <strong>
    <%= form.label :width, "Width" %>
    </strong>
    <%= form.text_field :width, default: board.width, class: "w-16 text-right form-text-field" %>

    <strong>
    <%= form.label :height, "Height"%>
    </strong>
    <%= form.text_field :height, default: board.height, class: "w-16 text-right form-text-field" %>

    <br>
    <strong>
    <%= form.label :mines, 'Mines'%>
    </strong>
    <%= form.text_field :mines, default: board.mines, class: "w-16 text-right form-text-field" %>

    <br>
    <%= form.submit "Generate Board", class: "btn-primary mt-4" %>
<% end %>

